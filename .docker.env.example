# Docker Environment Variables Template
# Copy this file to .docker.env and fill in your values
# IMPORTANT: Never commit .docker.env to version control!

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=your_secure_db_user
POSTGRES_PASSWORD=your_secure_db_password_here_change_me
POSTGRES_DB=ai_creative_hub

# ========================================
# Redis Configuration
# ========================================
REDIS_PASSWORD=your_secure_redis_password_here_change_me

# ========================================
# Application Secret Key
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_generated_secret_key_here_minimum_32_chars

# ========================================
# AI API Keys (Optional)
# ========================================
# Leave empty if you don't have access to a particular service
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=
JIMENG_API_KEY=
KLING_API_KEY=
SUNO_API_KEY=
MINIMAX_API_KEY=

# ========================================
# ComfyUI Configuration (Optional)
# ========================================
# Only needed if running local ComfyUI instance
COMFYUI_HOST=localhost
COMFYUI_PORT=8188

# ========================================
# Security Configuration
# ========================================
# Production environment settings
APP_ENV=production
DEBUG=false

# CORS origins (comma-separated, no spaces)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========================================
# File Storage Configuration
# ========================================
MAX_UPLOAD_SIZE=10485760
