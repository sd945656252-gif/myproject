# Application
APP_NAME=AI Creative Hub
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_creative_hub
DATABASE_TEST_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_creative_hub_test

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
JIMENG_API_KEY=your_jimeng_api_key_here
KLING_API_KEY=your_kling_api_key_here
SUNO_API_KEY=your_suno_api_key_here
MINIMAX_API_KEY=your_minimax_api_key_here

# ComfyUI
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
COMFYUI_API_URL=http://localhost:8188

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# File Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_UPLOAD_SIZE=10485760  # 10MB
